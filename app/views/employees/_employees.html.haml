-@employees.each do |employee|
	%div.employee
		.name
			= link_to employee.fullname, employee_path(employee), :class => "employee-details", :title => t("click-4-details")
		%span.extension
			= employee.extension
		%span.function
			= employee.title
		%span.department
			= employee.department.force_encoding('utf-8')
