= form_for [@company, @department], :html => { :multipart => true } do |f|
	- if @department.errors.any?
		#error_explanation
			%h2= t('activerecord.errors.template.body')

			%ul
			- @department.errors.full_messages.each do |msg|
				%li= msg
	.field
		= f.label t("departments.department")
		= f.text_field :name
	.field
		= f.label t("departments.email")
		= f.text_field :email
	.field
		= f.label t("departments.extension")
		= f.text_field :extension
	.actions
		= f.submit